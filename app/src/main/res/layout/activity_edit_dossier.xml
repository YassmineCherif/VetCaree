<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- EditText for Animal Name (nomAnimal) -->
    <EditText
        android:id="@+id/etNomAnimal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nom de l'Animal"
        android:padding="12dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- EditText for Sex (sexe) -->
    <EditText
        android:id="@+id/etSexe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Sexe"
        android:padding="12dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/etNomAnimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- EditText for Birth Date (date_naissance) -->
    <EditText
        android:id="@+id/etDateNaissance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Date de Naissance (YYYY-MM-DD)"
        android:padding="12dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/etSexe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- EditText for Species (espece) -->
    <EditText
        android:id="@+id/etEspece"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="EspÃ¨ce"
        android:padding="12dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/etDateNaissance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- EditText for Weight (poids) -->
    <EditText
        android:id="@+id/etPoids"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Poids (kg)"
        android:padding="12dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/etEspece"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Button to Save -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enregistrer"
        android:minHeight="48dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/etPoids"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
